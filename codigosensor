// Inclui a biblioteca para o display LCD I2C
#include <LiquidCrystal_I2C.h>

// Definição dos pinos do sensor TCS3200
#define S0 8
#define S1 9
#define S2 12
#define S3 11
#define LED_SCL 10 // LED do sensor
#define OUT 13

// Definição do endereço I2C do LCD 
LiquidCrystal_I2C lcd(0x3F, 16, 2);

// Variáveis para armazenar as leituras de cor
int red = 0;
int green = 0;
int blue = 0;

void setup() {
  // Configura a comunicação serial
  Serial.begin(9600);
  Serial.println("Sensor colorimetrico ligado!");
  
  // Configura os pinos do sensor
  pinMode(S0, OUTPUT);
  pinMode(S1, OUTPUT);
  pinMode(S2, OUTPUT);
  pinMode(S3, OUTPUT);
  pinMode(LED_SCL, OUTPUT);
  pinMode(OUT, INPUT);
  
  // Configura a frequência do sensor para 20%
  digitalWrite(S0, HIGH);
  digitalWrite(S1, LOW);
  
  // Ativa o LED do sensor (se o seu módulo tiver um)
  digitalWrite(LED_SCL, HIGH);
   // Inicializa o display LCD
  lcd.init();
  lcd.backlight(); // Ativa a luz de fundo do LCD
  // Mensagem de boas-vindas na tela
  lcd.setCursor(0, 0);
  lcd.print("Sensor de Cor");
  lcd.setCursor(0, 1);
  lcd.print("TCS3200 + I2C");
  delay(2000);
}

void loop() {
  // Lê a cor Vermelha
  digitalWrite(S2, LOW);
  digitalWrite(S3, LOW);
  red = pulseIn(OUT, LOW);
  
  // Lê a cor Verde
  digitalWrite(S2, HIGH);
  digitalWrite(S3, HIGH);
  green = pulseIn(OUT, LOW);
  
  // Lê a cor Azul
  digitalWrite(S2, LOW);
  digitalWrite(S3, HIGH);
  blue = pulseIn(OUT, LOW);

  // Exibe os valores no Monitor Serial
  Serial.print("Vermelho = ");
  Serial.print(red);
  Serial.print(" | Verde = ");
  Serial.print(green);
  Serial.print(" | Azul = ");
  Serial.println(blue);
  // Limpa a tela e exibe as leituras
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("VM:");
  lcd.print(red);
  lcd.print(" AZ:");
  lcd.print(blue);
// Exibe o status no display, você deve calibrar esses valores
  lcd.setCursor(0, 1);
  if (blue < 300) { // Exemplo de lógica de calibração: valor baixo de 'blue' para cor azul pura.
    lcd.print("CELULA MORTA");
  } else {
    lcd.print("CELULA VIVA!");
  }
  
  delay(5000); // Aguarda 5 segundos antes da próxima leitura
}
